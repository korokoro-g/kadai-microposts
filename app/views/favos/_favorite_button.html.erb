    <% if current_user.favorite?(post) %>
        <%= form_with(model: current_user.favos.find_by(micropost_id: post.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :micropost_id, post.id %>
            <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm' %>
        <% end %>
    <% else %>
        <%= form_with(model: current_user.favos.build, local: true) do |f| %>
            <%= hidden_field_tag :micropost_id, post.id %>
            <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
        <% end %>
    <% end %>
